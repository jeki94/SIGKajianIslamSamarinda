                android:id="@+id/statusberbayardetailpublic"
                android:textAlignment="center"
                android:layout_marginLeft="5dp"
                android:textSize="18dp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="5dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Pengelola:"
                android:textSize="18dip"
                android:textStyle="bold"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="pengelola"
                android:id="@+id/pengeloladetailpublic"
                android:textAlignment="center"
                android:layout_marginLeft="5dp"
                android:textSize="18dp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="5dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Kontak Pengelola:"
                android:textSize="18dip"
                android:textStyle="bold"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Kontak Pengelola"
                android:id="@+id/kontakpengeloladetailpublic"
                android:textAlignment="center"
                android:layout_marginLeft="5dp"
                android:textSize="18dp"/>
        </LinearLayout>









        <!-- end penyebab -->

        <!-- keterangan -->
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="5dp">
            <TextView
                android:id="@+id/ketdetail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Informasi :"
                android:textSize="18dip"
                android:textStyle="bold"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Informasi"
                android:id="@+id/informasidetailpublic"
                android:layout_below="@id/ketdetail"
                android:textAlignment="center"
                android:layout_marginLeft="5dp"
                android:textSize="18dp"/>
        </RelativeLayout>
        <View
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:layout_gravity="center"
            android:background="#448AFF"
            android:layout_marginBottom="10dp"/>
        <!-- end keterangan -->
        <Button
            android:id="@+id/btn_tunjuklokasi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="15dp"
            android:text="Tunjukan Lokasi"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btn_notifikasi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="15dp"
            android:text="Jadikan Notifikasi"
            android:textStyle="bold" />
